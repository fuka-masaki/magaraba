            <div class="top">
                <p>トップ><%= @comic.name %></p>
            </div>
            <div class="new-post">
                <%= link_to("新しく投稿","/comics/new_each/#{@comic.id}")%>        
            </div>
                <% @posts.each do |post| %>
            <div class="post">
                <%= link_to(post.content,"/posts/#{post.id}" ) %>
            </div>
            <% end %>         
    </div class="top-center">   
